{
	"editor.fontFamily": "'Jetbrains Mono', 'FiraCode Nerd Font Mono' , 'Droid Sans Mono', 'monospace', monospace ",
	"editor.fontSize": 15,
	"editor.tabCompletion": "on",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.fontLigatures": true,
	"editor.inlineSuggest.enabled": true,
	"editor.renderWhitespace": "all",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.autoClosingBrackets": "always",
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.formatOnSave": true,

	"window.titleBarStyle": "custom",
	"workbench.colorTheme": "Celestial",
	"workbench.startupEditor": "none",
	"workbench.iconTheme": "material-icon-theme",

	"telemetry.telemetryLevel": "off",

	"prettier.jsxSingleQuote": true,
	"prettier.jsxBracketSameLine": true,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.arrowParens": "avoid",
	"prettier.printWidth": 100,
	"prettier.semi": false,

	"[markdown]": {
		"editor.unicodeHighlight.ambiguousCharacters": false,
		"editor.unicodeHighlight.invisibleCharacters": false,
		"editor.wordWrap": "on",
		"editor.quickSuggestions": false,

		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
	},
	"[lua]": {
		"editor.useTabs": false
	},

	"terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', 'Jetbrains Mono', 'Droid Sans Mono', 'monospace', monospace",
	"terminal.integrated.fontSize": 16,

	"markdown-preview-enhanced.previewTheme": "github-dark.css",

	"vetur.experimental.templateInterpolationService": true,
	"vetur.format.options.tabSize": 4,

	"autoimport.useSemiColon": false,

	"typescript.updateImportsOnFileMove.enabled": "always",
	"terminal.external.linuxExec": "kitty"
}
